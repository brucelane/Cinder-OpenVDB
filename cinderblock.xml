<?xml version="1.0" encoding="UTF-8" ?>
<cinder>
<block
    name="OpenVDB"
    git="https://github.com/rezaali/Cinder-OpenVDB.git"
    author="Reza Ali"
    summary="OpenVDB Wrapper for Cinder 0.9.0+"
    version="3.2.0"
    url="https://github.com/rezaali/Cinder-OpenVDB"
    libraryUrl="http://opencv.org/">
    <supports os="macosx" />
    <headerPattern>src/OpenEXR/*.h</headerPattern>
    <headerPattern>src/OpenVDB/*.h</headerPattern>
    <headerPattern>src/OpenVDB/io/*.h</headerPattern>
    <headerPattern>src/OpenVDB/math/*.h</headerPattern>
    <headerPattern>src/OpenVDB/metadata/*.h</headerPattern>
    <headerPattern>src/OpenVDB/tools/*.h</headerPattern>
    <headerPattern>src/OpenVDB/tree/*.h</headerPattern>
    <headerPattern>src/OpenVDB/util/*.h</headerPattern>
    <headerPattern>src/tbb/*.h</headerPattern>
    <headerPattern>src/tbb/compat/*.h</headerPattern>
    <headerPattern>src/tbb/internal/*.h</headerPattern>
    <headerPattern>src/tbb/machine/*.h</headerPattern>
    <platform os="macosx">
      <dynamicLibrary>libs/macosx/OpenEXR/libHalf.dylib</dynamicLibrary>
		  <dynamicLibrary>libs/macosx/OpenVDB/libopenvdb.3.2.0.dylib</dynamicLibrary>
		  <dynamicLibrary>libs/macosx/tbb/libtbb.dylib</dynamicLibrary>
      <dynamicLibrary>libs/macosx/Boost/libboost_iostreams.dylib</dynamicLibrary>
      <dynamicLibrary>libs/macosx/Boost/libboost_system.dylib</dynamicLibrary>
      <buildCopy destination="frameworks">libs/macosx/OpenEXR/libHalf.dylib</buildCopy>
		  <buildCopy destination="frameworks">libs/macosx/OpenVDB/libopenvdb.3.2.0.dylib</buildCopy>
		  <buildCopy destination="frameworks">libs/macosx/tbb/libtbb.dylib</buildCopy>
      <buildCopy destination="frameworks">libs/macosx/Boost/libboost_iostreams.dylib</buildCopy>
      <buildCopy destination="frameworks">libs/macosx/Boost/libboost_system.dylib</buildCopy>
    </platform>
</block>
</cinder>
